<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./partials/head.ejs')%>  
    <link rel="stylesheet" href="/css/styles.css" type="text/css" >
    <script src="https://kit.fontawesome.com/c9746b4779.js" crossorigin="anonymous"></script>
</head>
<body>
  <script src="https://kit.fontawesome.com/c9746b4779.js" crossorigin="anonymous"></script>

      <nav class="navbar">
        
            
            <div id="buTTon"><input id="userButton" type="submit" value="User Profile"   onclick="userProfile(event)"  ></div>&nbsp &nbsp &nbsp &nbsp 
            <a type="button" href="/logout" id="btn1">Log Out</a>
           
        
    </nav>

       <form class="form container" id="formcontainer">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label" >Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" >
         
          
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1">
         
          <i class="fa-solid fa-pen"></i>
          <div><button type="button" data-toggle="modal" class="btn" data-target="#exampleModal">Change Password</button></div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>
                
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <input type="password" class="form-control" placeholder="Old Password" id="oldPass">
                  <input type="password" class="form-control" placeholder="New Password" id="newPass">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="exampleInputfirstName" class="form-label" >First Name</label>
          <input type="text" class="form-control" id="exampleInputfirstName">
          
        </div>
        <div class="mb-3">
          <label for="exampleInputlastname" class="form-label">Last Name</label>
          <input type="text" class="form-control" id="exampleInputlastname">
      
        </div>
        <button type="submit" class="btn btn-primary" id="btnprimary">Cancel</button>
        <button type="submit" class="btn btn-primary">Update</button>
      

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
       <header id="header">
        <h1><b>TASKS FOR THE DAY</b></h1>
        <br>
        <br>
            <form id="taskform">
                <input type="text" name="taskinput" id="taskinput" placeholder=" Enter your plan for the day">
                
                
                <div id="submitTodo"><input type="submit" id="tasksubmit" value="Add Task" onclick="onSubmitToDo(event)"></div>
                <br>
                <span id="errorMsg"></span>

            </form>
          <br>
    
        </header>
        <main id="main">
            <section class="tasklist">
                
                <h1 >MY TO DO LIST </h1>
                <br>
                <button  type="submit" id="del"   onclick="deleted(event)">Delete All</button><br><br>
                <div id="tasks">
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>ToDo</th>
                    <th>Action
                    </th>
                    
                </tr>
            </thead>
            <tbody id="toDoBody">
                <% findAllToDo.forEach((index) =>{%>
            
            <tr>
            <td>
                <%= index.id%>
            </td>
            <td>
                <%= index.todo%>
            </td>
            <td>
                <input type="checkbox" title="check" id="checkboxx" onclick="check(this)"
                        <%= index.isDone? 'checked':'' %> >
                        
                        <button id="btn" onclick = "getTodo(this)" data-update = "<%-index.id%>">Update</button></td>
                                    
            </td></tr>

          <% })%>
            </tbody>
        </table>
                </div>
            </section>
            
        </main>
        </div>
       
    
</body>
</html>